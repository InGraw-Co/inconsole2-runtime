/dts-v1/;

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/leds/common.h>
#include "sun8i-t113.dtsi"

/ {
	model = "InConsole 2.0";
	compatible = "allwinner,sun20i-d1", "allwinner,sun8i";

	aliases {
        serial0 = &uart3;
        serial1 = &uart1;
        mmc0 = &mmc0;
	};

	chosen {
		stdout-path = "serial0:115200n8";
		// bootargs = "mem=128M cma=72M root=/dev/mmcblk0p2 init=/sbin/init rootwait earlyprintk=sunxi-uart,0x02501400 console=tty0 console=ttyS5,115200";
		// bootargs = "mem=128M cma=64M root=/dev/mmcblk0p2 init=/sbin/init rootwait console=ttyS5,115200 earlyprintk=sunxi-uart,0x02501400";
	};

	reg_vcc: vcc {
		compatible = "regulator-fixed";
		regulator-name = "vcc";
		regulator-min-microvolt = <5000000>;
		regulator-max-microvolt = <5000000>;
	};

	reg_usbvbus: usbvbus {
		compatible = "regulator-fixed";
		regulator-name = "usbvbus";
		regulator-min-microvolt = <5000000>;
		regulator-max-microvolt = <5000000>;
		vin-supply = <&reg_vcc>;
	};

	reg_vcc_3v3: vcc-3v3 {
		compatible = "regulator-fixed";
		regulator-name = "vcc-3v3";
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
		vin-supply = <&reg_vcc>;
	};

	reg_vdd_cpu: vdd-cpu {
		compatible = "regulator-fixed";
		regulator-name = "vdd-cpu";
		regulator-min-microvolt = <900000>;
		regulator-max-microvolt = <900000>;
		vin-supply = <&reg_vcc>;
	};

	reg_vdd_ram: vdd-ram {
		compatible = "regulator-fixed";
		regulator-name = "vdd-ram";
		regulator-min-microvolt = <1500000>;
		regulator-max-microvolt = <1500000>;
		vin-supply = <&reg_vcc>;
	};

	leds {
        compatible = "pwm-leds";

        boot_led: led-boot {
            label = "led_boot";
            pwms = <&pwm 5 1000000 500000>;
            linux,default-trigger = "heartbeat";
            default-state = "on";
            color = "green";
        };
    };

	panel {
		compatible = "simple-panel";
		port {
			panel_input: endpoint {
				remote-endpoint = <&tcon_lcd0_out_panel>;
			};
		};
	};
};

&reg_aldo {
	regulator-min-microvolt = <1800000>;
	regulator-max-microvolt = <1800000>;
	vdd33-supply = <&reg_vcc_3v3>;
};

&reg_bldo { /* only test */
    compatible = "regulator-fixed";
    regulator-name = "bldo";
    regulator-min-microvolt = <1500000>;
    regulator-max-microvolt = <1500000>;
    vin-supply = <&reg_vcc_3v3>;
};

&cpu0 {
	cpu-supply = <&reg_vdd_cpu>;
};

&cpu1 {
	cpu-supply = <&reg_vdd_cpu>;
};

&wdt {
	status = "okay";
};

&de {
	status = "okay";
};

&tcon_lcd0 {
	pinctrl-names = "default";
	pinctrl-0 = <&lcd_rgb666_pins>;
	status = "okay";
};

&tcon_lcd0_out {
	tcon_lcd0_out_panel: endpoint@0 {
		reg = <0>;
		remote-endpoint = <&panel_input>;
	};
};

&pio {

	vcc-pb-supply = <&reg_vcc_3v3>;
	vcc-pc-supply = <&reg_vcc_3v3>;
	vcc-pd-supply = <&reg_vcc_3v3>;
	vcc-pe-supply = <&reg_avdd2v8>;
	vcc-pf-supply = <&reg_vcc_3v3>;
	vcc-pg-supply = <&reg_vcc_3v3>;

    boot_led_select {
        gpio-hog;
        gpios = <6 11 GPIO_ACTIVE_HIGH>; /* PG11 */
        output-high;
        line-name = "led-select";
    };

    pwm7_pd22_custom: pwm7-pd22 {
        pins = "PD22";
        function = "pwm7";
    };

    i2c1_pg_custom: i2c1-pins {
        pins = "PG8", "PG9";
        function = "i2c1";
        drive-strength = <10>;
    };

    i2c2_pe_custom: i2c2-pins {
        pins = "PE2", "PE3";
        function = "i2c2";
        drive-strength = <10>;
    };
};

&uart0 {
    status = "disabled";
};

&uart3 {
    pinctrl-0 = <&uart3_pb_pins>;
    pinctrl-names = "default";
    status = "okay";
};

&mmc0 {
	bus-width = <4>;
	cd-gpios = <&pio 5 6 (GPIO_ACTIVE_LOW)>;
	disable-wp;
	vmmc-supply = <&reg_vcc_3v3>;
	vqmmc-supply = <&reg_vcc_3v3>;
	pinctrl-0 = <&mmc0_pins>;
	pinctrl-names = "default";
	status = "okay";
};

&codec {
    status = "disabled";
};

&usb_otg {
	dr_mode = "otg";
	status = "okay";
};

&ehci0 {
	status = "okay";
};

&dmic {
	status = "disabled";
};

&ehci1 {
	status = "okay";
};


&ohci0 {
	status = "okay";
};

&ohci1 {
	status = "okay";
};

&ths {
	status = "okay";
/*	vref-supply = <&reg_aldo>; */
};

&usbphy {
	usb0_vbus-supply = <&reg_usbvbus>;
	usb1_vbus-supply = <&reg_usbvbus>;
	status = "okay";
};

&i2c1 {
    pinctrl-names = "default";
    pinctrl-0 = <&i2c1_pg_custom>;
    status = "okay";

    bq27220: battery@55 {
        compatible = "ti,bq27220", "ti,bq27xxx";
        reg = <0x55>;
    };
};

&i2c2 {
    pinctrl-0 = <&i2c2_pe_custom>;
    pinctrl-names = "default";
    status = "okay";

    joystick@48 {
        compatible = "ti,ads1115", "ti,ads1015";

        reg = <0x48>;
    };
};

backlight: backlight {
    compatible = "pwm-backlight";
    pwms = <&pwm 7 50000 0>;
    brightness-levels = <0 4 8 16 32 64 128 255>;
    default-brightness-level = <6>;
    power-supply = <&reg_vcc_3v3>;
    status = "okay";
};

&pwm {
    pinctrl-0 = <&pwm7_pd22_custom>;
    pinctrl-names = "default";
    status = "okay";
};
